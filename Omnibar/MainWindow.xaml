<Window
	x:Class="Omnibar.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="using:Omnibar"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d">

	<Window.SystemBackdrop>
		<MicaBackdrop />
	</Window.SystemBackdrop>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid.Resources>
			<ResourceDictionary>
				<ResourceDictionary.MergedDictionaries>
					<ResourceDictionary Source="ms-appx:///BreadcrumbBarItemEx.xaml" />
				</ResourceDictionary.MergedDictionaries>
			</ResourceDictionary>
		</Grid.Resources>

		<TextBlock Margin="12,8" Text="Omnibar Test" />

		<Grid
			Grid.Row="1"
			Margin="12"
			Padding="24,2"
			VerticalAlignment="Center"
			Background="{ThemeResource LayerFillColorDefaultBrush}"
			BorderBrush="{ThemeResource SystemColorControlAccentBrush}"
			BorderThickness="2"
			CornerRadius="20">
			<BreadcrumbBar VerticalAlignment="Center" ItemsSource="{x:Bind Items, Mode=OneWay}">
				<BreadcrumbBar.ItemTemplate>
					<DataTemplate>
						<local:BreadcrumbBarItemEx Style="{StaticResource DefaultBreadcrumbBarItemExStyle}" />
					</DataTemplate>
				</BreadcrumbBar.ItemTemplate>
			</BreadcrumbBar>
		</Grid>
	</Grid>

</Window>
